<div class="row">
  <p id="notice"><%= notice%></p>
</div>

<br />

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.booking.list.header') %></h1>

        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.booking.list.vaccines') %></th>
            <th><%= I18n.t('admin.booking.list.guid') %></th>
            <th><%= I18n.t('admin.booking.list.pin') %></th>
            <th><%= I18n.t('admin.booking.list.step')%></th>
            <th><%= I18n.t('admin.booking.list.created') %></th>
            <th><%= I18n.t('admin.booking.list.ip') %></th>
            <th><%= I18n.t('admin.booking.list.browser') %></th>
            <th><%= I18n.t('admin.booking.list.os') %></th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td class="align-middle"><%= booking.vaccine.name%></td>
              <td class="align-middle"><%= booking.guid %></td>
              <td class="align-middle"><%= booking.patient.pin %></td>
              <td class="align-middle"><%= booking.step_state %></td>
              <td class="align-middle"><%= booking.created_at %></td>
              <td class="align-middle"><%= booking.ip_address %></td>
              <td class="align-middle"><%= booking.browser_name %></td>
              <td class="align-middle"><%= booking.os_name %></td>
            </tr>
          <%end %>
          </tbody>
        </table>
        <%==pagy_bootstrap_nav(@pagy)%>
      </div>
    </div>
  </div>
</div>