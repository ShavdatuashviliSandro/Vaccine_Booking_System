<div class="row">
  <p id="notice"><%= notice%></p>
</div>

<br />

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.patients.list.header') %></h1>

        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.patients.first_name') %></th>
            <th><%= I18n.t('admin.patients.last_name') %></th>
            <th><%= I18n.t('admin.patients.birth_date') %></th>
            <th><%= I18n.t('admin.patients.pin')%></th>
            <th><%= I18n.t('admin.patients.non_resident') %></th>
            <th><%= I18n.t('admin.patients.mobile_phone') %></th>
            <th><%= I18n.t('admin.patients.email') %></th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td class="align-middle"><%= patient.first_name%></td>
              <td class="align-middle"><%= patient.last_name %></td>
              <td class="align-middle"><%= patient.birth_date %></td>
              <td class="align-middle"><%= patient.pin %></td>
              <td class="align-middle"><%= patient.non_resident %></td>
              <td class="align-middle"><%= patient.mobile_phone %></td>
              <td class="align-middle"><%= patient.email %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_patient_path(patient) ,class: 'btn btn-success' %></td>
            </tr>
          <%end%>
          </tbody>
        </table>
        <%==pagy_bootstrap_nav(@pagy)%>
      </div>
    </div>
  </div>
</div>