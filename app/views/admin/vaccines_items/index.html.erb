<div class="row">
  <p id="notice"><%= notice%></p>

  <div class="col">
    <%= link_to 'New vaccines', new_admin_vaccines_item_path, class: 'btn btn-success' %>
  </div>
</div>

<br />

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= 'vaccines' %></h1>

        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= 'String' %></th>
            <th><%= 'Boolean'%></th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @vaccines_item.each do |vaccines| %>
            <tr>
              <td class="align-middle"><%= vaccines.name %></td>
              <td class="align-middle"><%= vaccines.active %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_vaccines_item_path(vaccines) ,class: 'btn btn-success' %></td>
              <td class="align-middle"><%= link_to 'Destroy', [:admin, vaccines], method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger'  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%==pagy_bootstrap_nav(@pagy)%>
      </div>
    </div>
  </div>
</div>