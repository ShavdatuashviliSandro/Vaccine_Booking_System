<%= simple_form_for [:admin, unit] do |f| %>
  <div data-controller="units">
    <%= f.collection_select :country_id, Country.active, :id, :name,
                            { include_blank: 'Select Country' },
                            class: 'form-select',
                            data: {
                              action: "change->units#fetchCities",
                              units_target: "country"
                            }
    %>
    <br>
    <%= f.collection_select :city_id,[], :id, :name,
                            { include_blank: 'Select City' },
                            class: 'form-select',
                            data: {
                              action: "change->units#fetchDistricts",
                              units_target: "city"
                            }
    %>
    <br>
    <%= f.collection_select :district_id, [], :id, :name,
                            { include_blank: 'Select District' },
                            class: 'form-select',
                            data: {
                              units_target: "district"
                            }
    %>
  </div>
  <%= f.input :name %>
  <%= f.input :code %>
  <%= f.input :active %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>