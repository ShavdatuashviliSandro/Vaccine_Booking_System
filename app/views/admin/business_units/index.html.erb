<div class="row">
  <p id="notice"><%=notice %></p>

  <div class="col">
    <%= link_to 'New Business Unit', new_admin_business_unit_path, class: 'btn btn-success' %>
  </div>
</div>

<br />

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.slots.notices.header') %></h1>

        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.business_units.list.country_id') %></th>
            <th><%= I18n.t('admin.business_units.list.city_id') %></th>
            <th><%= I18n.t('admin.business_units.list.district_id') %></th>
            <th><%= I18n.t('admin.business_units.list.name') %></th>
            <th><%= I18n.t('admin.business_units.list.code') %></th>
            <th><%= I18n.t('admin.business_units.list.active') %></th>
            <th colspan="2"></th>
          </tr>
          </thead>

          <tbody>
          <% @business_units.each do |unit| %>
            <tr>
              <td class="align-middle"><%= unit&.country.name %></td>
              <td class="align-middle"><%= unit&.city.name %></td>
              <td class="align-middle"><%= unit&.district.name %></td>
              <td class="align-middle"><%= unit&.name %></td>
              <td class="align-middle"><%= unit&.code %></td>
              <td class="align-middle"><%= unit&.active %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_business_unit_path(unit), class: 'btn btn-success' %></td>
              <td class="align-middle"><%= link_to 'Destroy', [:admin, unit], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>