<br>
<div class="alert alert-success" role="alert">
  <h4 class="alert-heading">Find your Booking</h4>
  <hr>
  <p class="mb-0">Select form and find your order.</p>
</div>

<div class="form-group" data-controller="search">
  <br>
  <%= form_with url: false do |f|%>
    <label>Order code</label>
    <%=f.text_field :order_code,class: 'form-control', data:{search_target:'order_code'}%>
    <label>Mobile phone</label>
    <%=f.text_field :mobile_phone,class: 'form-control', data:{search_target:'mobile_phone'}%>
  <% end %>
  <br>
  <%= link_to 'Back', :back , class: 'btn btn-warning' %>
  <button type="button" class="btn btn-success" data-action="click->search#searchOrderCode" data-search-target="search">Search</button>
  <div data-search-target="user_info">

  </div>
</div>
